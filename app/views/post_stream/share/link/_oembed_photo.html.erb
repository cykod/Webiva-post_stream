<%
width = options.data['width']
height = options.data['height']
if width.blank? || width.to_i > maxwidth
  width = maxwidth
  height = nil
end
img = tag(:img, {:src => options.data['url'], :width => width, :height => height, :alt => options.data['title'], :title => options.data['title'], :class => 'post_stream_photo'}.delete_if{|k,v| v.blank?})
-%>
<%= content_tag(:a, img, {:href => post.link, :rel => 'nofollow', :target => '_blank'}, false) %>
