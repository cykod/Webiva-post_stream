<% if page_connection_hash -%>
<script type="text/javascript">
PostStreamForm.pageConnectionHash = '<%= jvh page_connection_hash %>';
PostStreamForm.defaultPostText = '<%= jvh poster.options[:default_post_text] %>';
PostStreamForm.defaultCommentText = '<%= jvh poster.options[:default_comment_text] %>';
</script>
<% end -%>

<div class="post_stream_posts">
<div id="post_stream_post_new"></div>
<%= render :partial => '/post_stream/page/posts', :locals => {:posts => posts, :renderer => renderer, :poster => poster, :site_node => site_node, :has_more => has_more, :stream_page => stream_page} %>
<div id="more_stream_posts">
</div>
<% if has_more -%>
<div class="has_more">
<a id="stream_post_has_more" onclick="PostStreamForm.has_more('<%= jvh renderer.ajax_url %>');" href="javascript:void(0);"><%= attributes['has_more'] || 'Previous Posts'.t %></a>
<span id="stream_post_no_more" style="display:none;"><%= attributes['no_more'] || 'No more posts'.t %></span>
</div>
<% end -%>
</div>

