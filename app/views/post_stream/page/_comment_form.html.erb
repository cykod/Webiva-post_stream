<div class="comment_form" id="post_stream_comment_<%= post.id %>" <%= 'style="display:none;"' if post.post_stream_post_comments.count == 0 %>
<% cms_unstyled_form_for :stream_post_comment, post.post_stream_post_comments.new, :html => {:id => "post_stream_comment_form_#{post.id}", :onsubmit => "PostStreamForm.onsubmit('#{renderer.ajax_url}', 'post_stream_comment_form_#{post.id}'); return false;", :class => 'post_stream_comment_form inactive'} do |f| -%>
<%= f.hidden_field :post_stream_post_id %>
<div class="body"><%= f.text_area :body, :onfocus => "PostStreamForm.activateComment(#{post.id});"  %></div>
<div class="submit"><%= f.submit 'Comment' %></div>
<% end -%>
</div>
