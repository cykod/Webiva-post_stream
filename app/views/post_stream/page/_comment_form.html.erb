<div class="comment_form">
<% cms_unstyled_form_for :stream_post_comment, post.post_stream_post_comments.new, :html => {:id => "post_stream_post_comment_form_#{post.id}", :onsubmit => "PostStreamForm.onsubmit('#{renderer.ajax_url}', 'post_stream_post_comment_form_#{post.id}'); return false;"} do |f| -%>
<%= f.hidden_field :post_stream_post_id %>
<div class="comment"><%= f.text_area :body %></div>
<div class="submit"><%= f.submit 'Comment' %></div>
<% end -%>
</div>
