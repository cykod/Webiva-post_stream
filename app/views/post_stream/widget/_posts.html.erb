<table class='mini_table' width='100%'>
<tr><th>Title</th><th>Body</th><th>Posted By</th><th>Posted At</th></tr>
<% posts.each do |post| -%>
<tr>
<td><a target="_blank" href="<%= url_for :controller => '/post_stream/manage', :action => 'post', :path => [post.id] %>"><%= h post.title %></a></td>
<td><%= h truncate(post.body, :length => 80) %></td>
<td><%= post.posted_by.name if post.posted_by %></td>
<td><%= distance_of_time_in_words_to_now(post.posted_at) %></td>
</tr>
<% end -%>
</table>
